.catalog__menu-wrapper
  column(1/4)
  padding-bottom 36px
  
.catalog__menu
  background-color blend(alpha($c-primary, 0.05),$c-white)
  border-radius 4px
  box-shadow 0 0 8px 2px alpha($c-primary--darkest, 0.15)
  padding 24px
  color $c-primary
  p
    font-weight bold
    padding-bottom 8px
  ul
    padding-bottom 16px
  li
    display block
    padding-bottom 8px
  a
    color $c-primary
    display inline-block
    padding-left 12px
    position relative
    &:before
      content "\2022"
      position absolute
      left 0
      top 0
    &:hover
      color $c-primary--lighter
  span
    color $c-primary
    display inline-block
    padding-left 12px
    position relative
    text-decoration underline
    &:before
      content "\2022"
      position absolute
      left 0
      top 0

.catalog__items
  column(3/4)
  padding-bottom 24px

.catalog__item-wrapper
  column(1/3)
  margin-bottom 30px
  
.catalog__item
  display block
  text-align center
  color $c-primary
  background-color blend(alpha($c-primary, 0.05),$c-white)
  padding 12px
  border-radius 4px
  box-shadow 0 0 8px 2px alpha($c-primary--darkest, 0.15)
  transition background-color $t-time ease, box-shadow $t-time ease
  line-height 20px
  &:hover
    color $c-primary
    background-color blend(alpha($c-primary--light, 0.05),$c-white)
    box-shadow 0 0 16px 2px alpha($c-primary--darkest, 0.25)
  
.catalog__item-img
  display block
  width 100%
  margin-bottom 16px

.catalog__item-title
  padding-bottom 12px
  font-weight 700
    
.catalog__item-subtitle
  font-size 14px
  
.catalog__item-description
  min-height 112px
  
      
  