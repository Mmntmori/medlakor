.tizer
  text-align center
  background $c-primary
  background linear-gradient(to right, alpha($c-primary, 0.2), alpha($c-primary, 0.8) 80%), url("/img/welcome-bg.jpg")
  background-size cover
  padding-top 64px
  padding-bottom 64px
  
.tizer__title
  margin 0 auto
  width 800px
  color $c-white
  text-shadow 0px 0px 32px $c-primary--dark
  
.tizer__button
  display inline-block
  font-size 20px
  color $c-white
  padding 8px 16px
  border 1px solid $c-white
  border-radius 4px
  transition color $t-time ease, background-color $t-time ease
  margin-top 32px
  box-shadow 0px 0px 4px 2px alpha($c-primary, 0.1)
  &:hover
    background-color $c-white
    color alpha($c-primary, 0.8)