.header
  background $c-primary--lightest
  background linear-gradient(to bottom, $c-white, $c-white 50%, blend(alpha($c-primary, 0.15), $c-white))
  box-shadow 0px 0px 4px 2px alpha($c-black, 0.3)
  position relative
  z-index 10
  
.header__logo
  column(1/4)
  padding-top 12px
  padding-bottom 12px
  font-size 0
  line-height 0
  a
    display inline-block
    height 50px
    font-size 16px
    line-height 24px
  img
    display block
    width 208px
    height auto
    margin-right auto
    
.header__nav
  column(3/4)
  font-size 0
  text-align right
  
.header__link
  font-size 16px
  line-height 22px
  display inline-block
  text-align center
  vertical-align middle
  text-transform uppercase
  padding 26px
  background $c-primary--lightest
  background linear-gradient(to bottom, blend(alpha($c-primary, 0.15), $c-white),  $c-white 25%, $c-white 75%, blend(alpha($c-primary, 0.15), $c-white))
  background-size 1px 148px
  background-position-y bottom
  transition background-position-y $t-time ease
  color $c-primary
  &--docs
    padding-top 15px
    padding-bottom 15px
  &:hover
    background-position-y top
    color $c-primary